<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    card_view:cardCornerRadius="@dimen/_5dp"
    card_view:cardMaxElevation="@dimen/_10dp"
    android:layout_margin="@dimen/_10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/itemNews_ivNewsImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:src="@color/sigin_button"
            android:layout_height="250dp"/>

        <LinearLayout
            android:padding="@dimen/_10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/_5dp"
                android:id="@+id/itemNews_tvTitle"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cần bán gấp 2 căn nhà khu Phú Mỹ Hưng"
                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>